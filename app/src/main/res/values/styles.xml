<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.LateralMenu">
        <item name="itemTextColor">@color/dark_white</item>
        <item name="drawableTint">@color/dark_white</item>
    </style>

    <style name="AppTheme.ToolbarStyle">
        <item name="android:textColorPrimary">@color/dark_white</item>
    </style>

</resources>
